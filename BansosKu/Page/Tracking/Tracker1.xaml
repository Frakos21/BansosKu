                  FontWeight ="Bold" RenderTransformOrigin="0.708,7.174" Height="28" Width="35"/>
            <Image Grid.Row="5" Margin="248,16,0,0" Source="/Resources/Images/checklist.png" Stretch="Fill" RenderTransformOrigin="0.31,0.145" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="31"/>
            <Label Grid.Row="5" Content="Selesai" HorizontalAlignment="Left" Margin="237,35,0,0"
                  FontWeight ="Bold" RenderTransformOrigin="0.708,7.174" Height="30" VerticalAlignment="Top" Width="48"/>


            <Rectangle Grid.Row="6" Margin="30,0,0,0" Stroke="Black" RadiusX="5" RadiusY="5" Height="50" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200"/>
